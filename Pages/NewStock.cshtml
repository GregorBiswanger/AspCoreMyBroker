@page
@model MyBroker.Pages.NewStockModel
@{
    ViewData["Title"] = "Neue Aktie hinzufügen";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div id="newStock" class="row">
    <form method="post">
        <div class="input-field col s8 m6">
            <input asp-for="Stockname" type="text" class="validate">
            <label asp-for="Stockname" class="active">Name</label>
            <span asp-validation-for="Stockname" style="color: red;"></span>
        </div>
        <div class="col s4">
            <button type="submit" class="btn waves-effect waves-light blue darken-1" style="margin-top: 20px;">OK</button>
        </div>
    </form>
</div>